# Definir el perfil activo
ENV=prod

# Puerto en el que corre la aplicación
PORT=8081

# 🔹 Configuración para el entorno de desarrollo (H2)
DEV_JPA_DATABASE=H2
DEV_DB_DRIVER=org.h2.Driver
DEV_DB_URL=jdbc:h2:mem:careconnect
DEV_DB_USERNAME=sa
DEV_DB_PASSWORD=

# Habilitar la consola H2 en desarrollo
DEV_H2_CONSOLE_ENABLED=true
DEV_H2_CONSOLE_PATH=/h2-console

# 🔹 Configuración para el entorno de producción (PostgreSQL)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres-db:5432/careconnect
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=admin
SPRING_JPA_HIBERNATE_DDL_AUTO=none
SPRING_PROFILES_ACTIVE=prod

# 🔹 Configuración adicional
SECRET_KEY=contrasena1345678 
JWT_EXPIRATION=3600  # Tiempo de expiración del token JWT en segundos
